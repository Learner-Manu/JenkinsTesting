pipeline {
  agent any
  stages {
    stage('Scm') {
      steps {
        echo 'scm'
      }
    }
    stage('Sanity Check') {
      steps {
        echo 'clean code'
      }
    }

    stage('Build') {
      steps {
        echo 'build'
      }
    }
    stage("Test & Quality"){
      parallel {
      stage('Unit Test') {
      steps {
        echo 'unit test'
      }
    }
    stage('Integration Test') {
      steps {
        echo 'integration test'
      }
    }
    stage('Code coverage') {
      steps {
        echo 'code coverage'
      }
    }
    stage('Static Analysis') {
      steps {
        echo 'sonar static analysis'
      }
    }
      }
    }
    
    stage('Dockerize') {
      steps {
        echo 'dockerize'
      }
    }
    stage('Publish Image') {
      steps {
        echo 'dockerize'
      }
    }

    stage('Deploy') {
      steps {
        echo 'deploy'
      }
    }

    stage("Notify"){
      parallel {
      stage('Update Jira') {
      steps {
        echo 'load test'
      }
    }
    stage('Send Mail') {
      steps {
        echo 'send mail'
      }
    }
    stage('Send IM') {
      steps {
        echo 'send im'
      }
    }
  }
  }

  stage('Cleanup') {
     parallel {
       stage('Delete workspace') {
      steps {
        echo 'delete workspace'
      }
    }
    stage('Clean Dangling images') {
      steps {
        echo 'remove dangling images'
      }
    }
     }
  }
  }
}